{
  "name": "spec2lambda",
  "version": "1.0.0",
  "description": "A TypeScript template for building spec-driven AWS Lambda APIs using OpenAPI, code generation, modular handlers, and a local dev server.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "spec2lambda": "dist/cli.js"
  },
  "scripts": {
    "cli": "tsx src/cli.ts",
    "build:template": "tsx src/scripts/packageTemplate.ts",
    "codegen": "npm run cli -- generate",
    "codegen:types": "openapi-typescript ./api/openapi.yml -o ./src/generated/openapi.types.ts",
    "codegen:zod": "orval --config orval.config.cjs",
    "codegen:contracts": "npm run codegen:types && npm run codegen:zod",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "build": "tsc && npm run build:template",
    "lint": "eslint . --ext .ts,.js,.cjs,.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/severinglion/spec2lambda.git"
  },
  "keywords": [],
  "author": "Joshua Bunt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/severinglion/spec2lambda/issues"
  },
  "homepage": "https://github.com/severinglion/spec2lambda#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/aws-lambda": "^8.10.159",
    "@types/diff": "^7.0.2",
    "@types/express": "^5.0.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "body-parser": "^2.2.0",
    "eslint": "^9.39.1",
    "express": "^5.1.0",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "js-yaml": "^4.1.1",
    "openapi-typescript": "^7.10.1",
    "orval": "^8.0.0-rc.2",
    "path-to-regexp": "^8.3.0",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^3.2.4",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "diff": "^8.0.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
